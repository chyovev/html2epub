                <a href="{{ custom_url([{'controller': 'publish', 'action': 'index', 'book': book.slug}]) }}" title="Convert to ePub" data-placement="bottom" class="d-block"><img src="{{root}}img/convert.png" class="w-100" alt="Convert" /></a>
            </div>
            {% endif %}
