<div class="mb-4 h4 font-weight-bold">
    <span class="align-middle">{{ chapter.title|e }}</span>
</div>

<div class="form-group row">
    <div class="col-lg-12">
        <label class="form-control-label" for="title">Title</label>
        <input type="text" name="title" id="title" value="{{ chapter['title']|e }}" class="form-control{% if errors['title'] %} is-invalid{% endif %}" />
        {% if errors['title'] %}<span class="invalid-feedback">{{ errors['title'][0] }}</span>{% endif %}
    </div>
</div>

<div class="form-group row">
    <div class="col-lg-12">
        <label class="form-control-label" for="body">Body</label>
        <textarea name="body" id="body" class="tinymce form-control{% if errors['body'] %} is-invalid{% endif %}">{{ chapter['body'] }}</textarea>
        {% if errors['body'] %}<span class="invalid-feedback">{{ errors['body'][0] }}</span>{% endif %}
    </div>
</div>

<div class="form-group row text-center mt-5">
    <div class="col-lg-12">
        <input type="submit" class="btn btn-outline-info" value="Save chapter" />
    </div>
</div>